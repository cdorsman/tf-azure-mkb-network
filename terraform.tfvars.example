# Example terraform.tfvars file
# Copy this file to terraform.tfvars and customize the values

# Basic Configuration
resource_group_name = "RG-MKB-Netwerk"
location           = "West Europe"
vnet_name          = "mkb-vnet"

# SSH Public Key (REQUIRED)
# Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/mkb_key
# Then copy the contents of ~/.ssh/mkb_key.pub here
admin_ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAA... your-email@domain.com"

# Optional: Disable Azure Bastion if not needed (saves costs)
enable_bastion = true